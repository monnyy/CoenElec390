<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffd78c">

    <Button
        android:id="@+id/edit_profile_button"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_logo"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="casual"
        android:text="@string/edit_profile"
        android:drawableLeft="@drawable/ic_action_edit_profile"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="20sp"
        android:textStyle="bold" android:drawableStart="@drawable/ic_action_edit_profile" />

    <Button
        android:id="@+id/view_reminders_button"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_profile_button"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:backgroundTint="?android:attr/colorFocusedHighlight"
        android:fontFamily="casual"
        android:text="@string/view_my_reminders"
        android:drawableLeft="@drawable/ic_action_list"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="20sp"
        android:textStyle="bold" android:drawableStart="@drawable/ic_action_list" />

    <Button
        android:id="@+id/new_reminder_button"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/view_reminders_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_action_new_reminder"
        android:drawableStart="@drawable/ic_action_new_reminder"
        android:fontFamily="casual"
        android:text="@string/create_a_reminder"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/profile_picture"
        app:srcCompat="@drawable/profile_logo" />

    <TextView
        android:id="@+id/seniorDOB"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seniorName"
        android:layout_alignStart="@+id/seniorName"
        android:layout_below="@+id/seniorName"
        android:gravity="end"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/seniorAddress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seniorDOB"
        android:layout_alignStart="@+id/seniorDOB"
        android:layout_below="@+id/seniorDOB"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/seniorName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login_logo"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="27dp"
        android:layout_toLeftOf="@+id/login_logo"
        android:layout_toStartOf="@+id/login_logo"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>